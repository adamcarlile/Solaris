<%= render :partial => 'public/shared/page_body' %>

<ul id="faq">
<% @questions.each_with_index do |question, index| %>
  <li><a href="#question-<%= index + 1 %>"><%= h question.title %></a></li>
<% end %>
</ul>

<% @questions.each_with_index do |question, index| %>
<div class="question">
  <a name="question-<%= index + 1 %>"></a>
  <h3><%= question.title %></h3>
	<%= question.answer %>
</div>
<% end %>
