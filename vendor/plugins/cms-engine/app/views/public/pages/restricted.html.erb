<h1><%= h @page.title %></h1>
<h2>Restricted content</h2>
<p>You must be logged in to view this page</p>

<% @user_session = UserSession.new %>
<% form_for @user_session  do |f| %>
<%= hidden_field_tag :return_to, request.request_uri %>
<fieldset id="login">
  <p>
    <%= f.label :email, 'E-mail address' %><br />
  	<%= f.text_field :email, :size => 35, 'class' => 'textfield' %>
  </p>
  <p>
    <%= f.label :password %><br />
  	<%= f.password_field :password, :size => 35, 'class' => 'textfield' %>
  </p>
  <div class="actions"><input type="submit" value="Login" /></div>
  
  <%= link_to 'Lost your password?', new_password_reset_path %>
</fieldset>
<% end %>

<p>Dont&rsquo;t have an account? <%= link_to 'register here', signup_path %></p>
