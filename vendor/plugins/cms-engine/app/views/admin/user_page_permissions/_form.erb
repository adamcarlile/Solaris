<% content_for :head do %>
  <script type="text/javascript">
    user_autocomplete_url = '<%= admin_users_path(:format => 'txt') %>';
  </script>
<% end %>

<%= current_object.errors.full_messages %>

<fieldset>
  <p>
    <%= f.label :user_identifier, 'User' %><br />
    <%= f.text_field :user_identifier, :class => 'user_autocomplete' %>
    <%= f.error_message_on :user_id %>
  </p>
  <p>
    <label>
      <%= f.check_box :edit %>
      Add/edit content?
      <%= f.error_message_on :edit %>
    </label>
  </p>
  <p>
    <label>
      <%= f.check_box :publish %>
      Publish content?
      <%= f.error_message_on :publish %>
    </label>
  </p>

  <%= render 'admin/generic/resource_buttons' %>

</fieldset>
