<div class="flickr">
	<%- cache('flickr', :expires_in => 3.hours) do %>
		<% begin %>
		<% Flickr.new(FLICKR_ID).stream.each do |image| %>
			<%= link_to(image_tag(flickr_image_url(image, :size => "small"), :width => 55, :height => 55, :alt => image.title), flickr_image_url(image, :size => "original"), :rel => 'flickr') %>
		<% end %>
		<% rescue %>
		<p>Looks like we can't connect to Flickr right now</p>
		<% end %>
	<% end %>
</div>
<p style="padding-left:15px; padding-bottom:10px; font-size:1.1em">See more photos on <a href="http://www.flickr.com/photos/solarismobile/">Flickr</a></p>
